<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title of the Activity -->
    <TextView
        android:id="@+id/guest_management_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guest Management"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="16dp" />

    <!-- RecyclerView to display the list of guests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guest_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp" />

    <!-- Button to add a new guest -->
    <Button
        android:id="@+id/add_guest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Guest"
        android:layout_gravity="center"
        android:padding="12dp"
        android:textSize="16sp" />
</LinearLayout>